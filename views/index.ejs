<% include header %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <form id="searchBox" onsubmit="onSubmit('/index')">
      <div class="form-group">
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Introduce keywords or location">
      </div>
      <div class="form-group">
        <input class="btn btn-primary" type="submit">
      </div>
    </form>

    <form id=“xForm" onsubmit="onSubmit('/index')">
      <label for='firstname'>Restaurant Name:</label>
      <input type="text" name="name" id="name" >
      <p><label for='lastname'>Cuisine:</label>
        <input type="text" name="cuisine" id="cuisine" >
      </p><p><input type="submit" name="g" value="Submit" id="g"></p>
    </form>

    <form id=“radiusForm" onsubmit="onSubmitRadius('/radius')">
      <p><label for='searchRadius'>Or search for restaurants around you</label>

        <select class="custom-select" name="searchRadius" id="searchRadius" >
          <option selected>Select a distance</option>
          <option value="5">5km</option>
          <option value="10">10km</option>
          <option value="20">20km</option>
          <option value="50">50km</option>
        </select>
      </p>
      <!-- keep this fields as hidden later on -->
      <input type="hidden" name="longitude" id="longitude" placeholder="long">
      <input type="hidden" name="latitude" id="latitude" placeholder="lat">


      <p><input type="submit" name="g" value="Submit" id="g"></p>
    </form>

  </div>
</div>

<div class="container">
  <!-- Example row of columns -->

  <div class="row">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h6>RestaurantName</h6>
          <p class="card-text">★★★★☆ 4/5</p>
          <a href="restaurant" class="card-link">ViewRestaurant</a>
          <br>
        </div>
      </div>
    </div>
  </div>

  <hr>
  <div id="results" style="margin-top:30px"></div>

</div> <!-- /container -->


</main>

<footer class="container">
  <p>&copy; Company 2017-2018</p>
</footer>


        <label for="exampleFormControlSelect1">Type Of Cuisine</label>
        <select class="form-control" id="exampleFormControlSelect1" name="cuisineType">
            <option>All</option>
        <% for (i in foodTypes) { %>
            <div class="form-check form-check-inline">
                <option><%= foodTypes[i] %></option>
            </div>
        <% }%>
        </select>
    </p>


    <input type="submit" name="g" value="Update" id="g" class="btn btn-primary">


